generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model induction {
  resource_id BigInt
  title       String   @db.VarChar(255)
  description String   @db.Text
  createtime  DateTime @db.DateTime(0)
  url         String   @db.VarChar(255)
  id          Int      @id @default(autoincrement())

  @@index([resource_id], map: "resource_id")
}

model resource {
  resource_id   BigInt @id
  resource_type Int    @db.TinyInt
  resource_path String @db.VarChar(255)
}

model user {
  ID       BigInt @id
  NickName String @db.VarChar(16)
}

model user_auth {
  user_id       BigInt
  identity_type Int    @db.TinyInt
  identifier    String @db.VarChar(255)
  credential    String @db.VarChar(255)
  id            Int    @id @default(autoincrement())

  @@index([user_id], map: "user_id")
}

model user_subscription {
  user_id     BigInt
  resource_id BigInt
  id          Int    @id @default(autoincrement())

  @@index([user_id], map: "user_id")
}
